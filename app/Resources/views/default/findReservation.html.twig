{% extends 'base.html.twig' %}
{% block title %}Najít rezervaci{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h6>Zadejte kód rezervace:</h6>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <form method="post" action="{{ path('findReservationForm') }}">
                    <div class="col-md-8">
                        <div class="form-group">
                            <input type="text" id="code" name="code" class="form-control" required="required" placeholder="kód rezervace"/>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> vyhledat</button>
                    </div>
                    </form>
                </div>

            </div>
        </div>
        {% if app.user %}
        <div class="row">
            <div class="col-md-12">
                <h6>Vaše poslední rezervace</h6>
            </div>
            <div class="col-md-12">
                {{ render(controller('AppBundle:ListReservation:makeReservationsTable', { 'reservations': reservations })) }}
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}
